<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/grey200"
        android:text="Save custom workout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"/>

    <RadioButton
        android:id="@+id/overwrite_radio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toTopOf="@id/save_as_radio_button"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="24dp"
        android:text="Overwrite"
        android:checked="true"
        android:textColor="@color/grey200"/>

    <TextView
        android:id="@+id/workout_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingVertical="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toTopOf="@id/overwrite_radio_button"
        app:layout_constraintBottom_toBottomOf="@id/overwrite_radio_button"
        app:layout_constraintStart_toEndOf="@id/overwrite_radio_button"
        android:textStyle="italic"
        android:textColor="@color/grey200"
        tools:text="Sample Workout"
        />

    <RadioButton
        android:id="@+id/save_as_radio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="4dp"
        app:layout_constraintTop_toBottomOf="@id/overwrite_radio_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="24dp"
        android:text="Save as"
        android:textColor="@color/grey200"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="80sp"
        app:layout_constraintTop_toTopOf="@+id/save_as_radio_button"
        app:layout_constraintBottom_toBottomOf="@id/save_as_radio_button"
        app:layout_constraintStart_toEndOf="@+id/save_as_radio_button"
        android:textColor="@color/grey200"
        android:textSize="14sp"
        android:singleLine="true"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        app:fontFamily="@font/app_font"
        android:includeFontPadding="false"
        android:maxLength="25"
        android:imeOptions="actionDone"/>


</androidx.constraintlayout.widget.ConstraintLayout>