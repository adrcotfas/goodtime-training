<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey1200"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/scroll_handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_drag"
        app:tint="@color/grey800"
        android:padding="4dp"/>

    <ImageView
        android:id="@+id/session_type_image"
        android:layout_width="28dp"
        android:layout_height="28dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/scroll_handle"
        app:tint="@color/grey500"
        android:padding="4dp"
        tools:src="@drawable/ic_fire2"/>

    <TextView
        android:id="@+id/session_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/session_type_image"
        android:textSize="16sp"
        android:layout_marginStart="4dp"
        tools:text="FOR TIME"
        android:textColor="@color/grey500"/>

    <com.google.android.material.chip.Chip
        android:id="@+id/session_chip"
        android:layout_width="wrap_content"
        android:layout_height="42sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/session_type_text"
        app:layout_constraintEnd_toStartOf="@id/close_button"
        style="@style/FavoritesChipStyle.GreenAndSmaller"
        app:closeIconEnabled="false"
        android:clickable="true"
        android:focusable="true"
        tools:text="8 x 20 s / 10 s"/>

    <ImageView
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_close"
        app:tint="@color/grey800"
        android:padding="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>