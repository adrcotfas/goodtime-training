<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/current_selection_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="24dp"
        android:visibility="gone"
        tools:visibility="visible">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save current selection"
            android:textSize="16dp"
            android:textColor="@color/grey200"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/current_selection_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textStyle="italic"
            android:textSize="@dimen/smallerTextSize"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@+id/save_favorite_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:layout_marginTop="8dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/favorite_candidate_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FavoritesChipStyle.Grey"/>

    </LinearLayout>

    <TextView
        android:id="@+id/select_favorite_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/grey200"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"/>

    <ScrollView
        android:id="@+id/favorites_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        tools:background="@color/grey500"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/favorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipSpacingHorizontal="16dp"
            app:selectionRequired="true"
            app:singleSelection="true" />
    </ScrollView>

</LinearLayout>