<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_amrap">

    <fragment
        android:id="@+id/nav_amrap"
        android:name="goodtime.training.wod.timer.ui.amrap.AmrapFragment">
        <action
            android:id="@+id/to_workout"
            app:destination="@id/nav_workout" />
    </fragment>

    <fragment
        android:id="@+id/nav_for_time"
        android:name="goodtime.training.wod.timer.ui.for_time.ForTimeFragment">
        <action
            android:id="@+id/to_workout"
            app:destination="@id/nav_workout" />
    </fragment>

    <fragment
        android:id="@+id/nav_emom"
        android:name="goodtime.training.wod.timer.ui.emom.EmomFragment">
        <action
            android:id="@+id/to_workout"
            app:destination="@id/nav_workout" />
    </fragment>

    <fragment
        android:id="@+id/nav_hiit"
        android:name="goodtime.training.wod.timer.ui.tabata.TabataFragment">
        <action
            android:id="@+id/to_workout"
            app:destination="@id/nav_workout" />
    </fragment>

    <fragment
        android:id="@+id/nav_custom"
        android:name="goodtime.training.wod.timer.ui.custom.CustomWorkoutFragment">
        <action
            android:id="@+id/to_workout"
            app:destination="@id/nav_workout" />
    </fragment>

    <fragment
        android:id="@+id/nav_workout"
        android:name="goodtime.training.wod.timer.ui.workout.WorkoutFragment"
        android:label="WorkoutFragment"
        tools:layout="@layout/fragment_workout">
        <argument
            android:name="sessions"
            app:argType="string"
            android:defaultValue="null"/>
    </fragment>

    <fragment
        android:id="@+id/nav_log"
        android:name="goodtime.training.wod.timer.ui.log.LogFragment"
        android:label="LogFragment"
        tools:layout="@layout/fragment_log"/>

    <dialog
        android:id="@+id/nav_dialog_stop_workout"
        android:name="goodtime.training.wod.timer.ui.workout.StopWorkoutDialog"
        android:label="StopWorkoutDialog" >
    </dialog>

</navigation>