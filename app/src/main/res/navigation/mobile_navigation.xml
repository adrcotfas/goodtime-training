<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_main">

    <fragment
        android:id="@+id/nav_main"
        android:name="com.adrcotfas.wod.ui.main.MainFragment"
        android:label="main" >
        <action
            android:id="@+id/start_workout_action"
            app:destination="@id/nav_workout" />
    </fragment>

    <fragment
        android:id="@+id/nav_workout"
        android:name="com.adrcotfas.wod.ui.workout.WorkoutFragment"
        android:label="WorkoutFragment"
        tools:layout="@layout/fragment_workout">
        <argument
            android:name="sessions"
            app:argType="string"
            android:defaultValue="null"/>
    </fragment>

    <fragment
        android:id="@+id/nav_log"
        android:name="com.adrcotfas.wod.ui.log.LogFragment"
        android:label="LogFragment"
        tools:layout="@layout/fragment_log"/>

    <dialog
        android:id="@+id/nav_dialog_stop_workout"
        android:name="com.adrcotfas.wod.ui.workout.StopWorkoutDialog"
        android:label="StopWorkoutDialog" >
        <action
            android:id="@+id/action_stopWorkoutDialog_to_nav_main"
            app:destination="@id/nav_main"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_main"
            app:popUpToInclusive="true" />
    </dialog>

</navigation>