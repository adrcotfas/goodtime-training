<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/green_goodtime</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@android:color/black</item>
        <item name="colorOnSurface">@android:color/white</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="chipStyle">@style/FavoritesChipStyle</item>
        <item name="bottomAppBarStyle">@style/BottomAppBar</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="elevation">0dp</item>
    </style>

    <!--    Favorites-->
    <style name="FavoritesChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textAppearance">@style/FavoritesTextStyle</item>
        <item name="android:textColor">@color/green_goodtime</item>
        <item name="chipBackgroundColor">#0b2c17</item>
    </style>

    <style name="FavoritesTextStyle" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/app_font</item>
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="TabTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/app_font</item>
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WorkoutTimerTextStyle">
        <item name="android:textSize">80sp</item>
        <item name="fontFamily">@font/timer_font</item>
        <item name="android:fontFamily">@font/timer_font</item>
    </style>

    <style name="PickerTextStyle">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/timer_font</item>
        <item name="android:fontFamily">@font/timer_font</item>
    </style>

    <style name="PickerTextStyle.Small">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="PickerTextStyle.Medium">
        <item name="android:textSize">60sp</item>
    </style>

    <style name="PickerTextStyle.Large">
        <item name="android:textSize">70sp</item>
    </style>


    <style name="ShapeAppearanceOverlay.MaterialComponents.Chip" parent="" tools:override="true">
        <item name="cornerSize">10%</item>
    </style>

</resources>
