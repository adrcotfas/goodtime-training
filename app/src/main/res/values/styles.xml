<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MaterialAlertDialog" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.MediumComponent</item>
    </style>

    <style name="MaterialAlertDialog.Title.Text"
        parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/grey200</item>
        <item name="android:textAppearance">@style/DialogTitleTextStyle</item>
    </style>

    <style name="MaterialAlertDialog.Body.Text"
        parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/grey500</item>
        <item name="android:textAppearance">@style/DialogBodyTextStyle</item>
    </style>

    <style name="MaterialAlertDialog.Body.Actions" parent="">
        <item name="android:textColor">@color/grey200</item>
        <item name="android:textAppearance">@style/DialogActionsTextStyle</item>
    </style>

    <style name="DialogTitleTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/app_font</item>
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="DialogActionsTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/app_font</item>
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="DialogBodyTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/app_font</item>
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.SmallComponent</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="colorPrimary">@color/green_goodtime</item>
    </style>

    <style name="ShapeAppearance.MediumComponent"
        parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.SmallComponent"
        parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="elevation">0dp</item>
    </style>

    <style name="WorkoutTimerTextStyle">
        <item name="android:textSize">80sp</item>
        <item name="fontFamily">@font/timer_font</item>
        <item name="android:fontFamily">@font/timer_font</item>
    </style>

    <style name="TimerStyleBase">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TimerStyle" parent="TimerStyleBase">
        <item name="fontFamily">@font/timer_font</item>
        <item name="android:fontFamily">@font/timer_font</item>
    </style>

    <style name="TimerStyle.Medium">
        <item name="android:textSize">60sp</item>
    </style>

    <style name="TimerStyle.Large">
        <item name="android:textSize">80sp</item>
    </style>

    <style name="TimerStyle.ExtraLarge">
        <item name="android:textSize">150sp</item>
    </style>

    <style name="TimerStyleLite" parent="TimerStyleBase">
        <item name="fontFamily">@font/timer_font_lite</item>
        <item name="android:fontFamily">@font/timer_font_lite</item>
    </style>

    <style name="TimerStyleLite.Smaller">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TimerStyleLite.Small">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TimerStyleLite.Medium">
        <item name="android:textSize">45sp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialComponents.Chip" parent="" tools:override="true">
        <item name="cornerSize">50%</item>
    </style>

    <style name="WorkoutBottomAppBarStyle" parent="Widget.MaterialComponents.BottomNavigationView.PrimarySurface">
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationView.TextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationView.TextAppearance</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="BottomNavigationView.TextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/roboto_condensed</item>
    </style>

    <style name="SectionCommon">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
    </style>

    <style name="SectionHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">@dimen/regularTextSize</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OverviewTextValue">
        <item name = "android:gravity">center</item>
        <item name="android:textSize">@dimen/smallerTextSize</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OverviewTextValue.Large">
        <item name = "android:gravity">center</item>
        <item name="android:textSize">@dimen/largeTextSize</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OverviewTextDescription">
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Spinner" parent="@style/Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:textColor">@color/grey500</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="ClickableTextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:drawablePadding">32dp</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/regularTextSize</item>
        <item name="android:textColor">@color/grey200</item>
    </style>

    <style name="ClickableTextViewEnd">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/regularTextSize</item>
        <item name="android:textColor">@color/grey200</item>
    </style>

</resources>
