<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/green_goodtime</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@android:color/black</item>
        <item name="colorOnSurface">@android:color/white</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>

        <item name="fontFamily">@font/app_font</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="chipStyle">@style/FavoritesChipStyle.Green</item>
        <item name="bottomAppBarStyle">@style/BottomAppBar</item>

        <item name="alertDialogTheme">@style/DialogTheme</item>
        <item name="materialAlertDialogTheme">@style/DialogTheme</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="elevation">0dp</item>
    </style>

    <!--    Favorites-->
    <style name="FavoritesChipStyle.Green" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:textAppearance">@style/FavoritesTextStyle</item>
        <item name="android:textColor">@color/green_goodtime</item>
        <item name="chipBackgroundColor">@color/green_goodtime_dark</item>
        <item name="closeIconTint">@color/transparent_dark</item>
    </style>

    <style name="FavoritesChipStyle.GreenAndSmaller" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:textAppearance">@style/FavoritesTextStyleSmaller</item>
        <item name="android:textColor">@color/green_goodtime</item>
        <item name="chipBackgroundColor">@color/green_goodtime_dark</item>
        <item name="closeIconTint">@color/transparent_dark</item>
    </style>

    <style name="FavoritesChipStyle.Grey" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textAppearance">@style/FavoritesTextStyle</item>
        <item name="android:textColor">@color/grey200</item>
        <item name="chipBackgroundColor">@color/grey800</item>
    </style>

    <style name="FavoritesTextStyle" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/app_font</item>
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="FavoritesTextStyleSmaller" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/app_font</item>
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="WorkoutTimerTextStyle">
        <item name="android:textSize">80sp</item>
        <item name="fontFamily">@font/timer_font</item>
        <item name="android:fontFamily">@font/timer_font</item>
    </style>

    <style name="TimerStyleBase">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TimerStyle" parent="TimerStyleBase">
        <item name="fontFamily">@font/timer_font</item>
        <item name="android:fontFamily">@font/timer_font</item>
    </style>

    <style name="TimerStyle.Medium">
        <item name="android:textSize">60sp</item>
    </style>

    <style name="TimerStyle.Large">
        <item name="android:textSize">80sp</item>
    </style>

    <style name="TimerStyle.ExtraLarge">
        <item name="android:textSize">150sp</item>
    </style>

    <style name="TimerStyleLite" parent="TimerStyleBase">
        <item name="fontFamily">@font/timer_font_lite</item>
        <item name="android:fontFamily">@font/timer_font_lite</item>
    </style>

    <style name="TimerStyleLite.Smaller">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TimerStyleLite.Small">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TimerStyleLite.Medium">
        <item name="android:textSize">45sp</item>
    </style>

    <style name="TimerStyleLite.Large">
        <item name="android:textSize">70sp</item>
    </style>


    <style name="ShapeAppearanceOverlay.MaterialComponents.Chip" parent="" tools:override="true">
        <item name="cornerSize">50%</item>
    </style>

    <style name="WorkoutBottomAppBarStyle" parent="Widget.MaterialComponents.BottomNavigationView.PrimarySurface">
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextAppearanceActive">?attr/textAppearanceOverline</item>
        <item name="itemTextAppearanceInactive">?attr/textAppearanceOverline</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="DialogTheme" parent="Theme.MaterialComponents.Dialog.Alert" >
        <item name="android:backgroundTint">@color/grey1000</item>
        <item name="dialogCornerRadius">16dp</item>
    </style>

</resources>
